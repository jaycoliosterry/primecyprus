    <div class="col-md-10">
      <%= f.text_field :property_condition, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :property_near_banks, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.check_box :property_near_banks, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :property_is_new_build, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.check_box :property_is_new_build, :class => 'text-field form-control' %>
