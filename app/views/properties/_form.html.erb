      <%= f.text_field :property_sale_or_rental, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :property_price_per_month, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
