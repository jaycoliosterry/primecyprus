    </div>
  </div>
  <div class="form-group">
    <%= f.label :property_first_line_address, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :property_first_line_address, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :property_postcode, :class => 'control-label col-md-2' %>
